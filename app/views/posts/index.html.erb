<h1>Posts</h1>

<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Image_URL
        </th>
        <th>
            Content
        </th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
        <td>
            <%= post.title %>
        </td>
        <td>
            <%= image_tag "#{post.image_url}" %>
        </td>
        <td>
            <%= post.content %>
        </td>
    </tr>
    <% end %>
</table>